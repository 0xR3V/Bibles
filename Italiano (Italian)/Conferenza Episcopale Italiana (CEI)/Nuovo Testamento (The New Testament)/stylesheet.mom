.\" Changing the right/center parts of the header, read: https://www.schaffter.ca/mom/momdoc/headfootpage.html
.HEADER_RIGHT \E*[$TITLE]
.HEADER_CENTER #
.\" Styling the left header
.HEADER_MARGIN .4i
.HEADER_RIGHT_FONT I
.HEADER_CENTER_FONT B
.HEADER_LEFT_FONT BI
.HEADER_RIGHT_CAPS off
.\" Styling HEADING 1 and 2 levels.
.HEADING_STYLE 1 \
    FONT BI \
    COLOR gray \
    SIZE +10
.HEADING_STYLE 2 \
    FONT BI \
    COLOR gray \
    SIZE +5 \
    NEEDS 2
.\" Styling DROPCAP
.DROPCAP_COLOR gray
.DROPCAP_FONT B
